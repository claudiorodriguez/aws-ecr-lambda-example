{
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "./src/**/*.spec.ts",
    "./src/**/__tests__/**/*.ts",
    "./src/**/*.spec.tsx",
    "./src/**/__tests__/**/*.tsx"
  ],
  "compilerOptions": {
    "allowJs": true,
    "target": "es2020",
    "lib": ["es2020"],
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "noEmitHelpers": false,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "types": ["node"]
  }
}